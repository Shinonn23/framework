{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": ".",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "allowImportingTsExtensions": false,
        "paths": {
            "@/*": ["./*"],
        },
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}