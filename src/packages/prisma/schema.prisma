generator client {
    provider   = "prisma-client"
    output     = "./generated"
    engineType = "client"
    runtime    = "bun"
}

datasource db {
    provider = "sqlite"
}

model Project {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    ownerId   Int
    path      String   @unique
    metaData  Json?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}