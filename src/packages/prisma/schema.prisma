generator client {
    provider = "prisma-client"
    output   = "./generated"
}

datasource db {
    provider = "sqlite"
    url      = "file:./database/main.db"
}

model Project {
    id        String   @id @default(uuid())
    name      String   @unique
    owner     String
    path      String   @unique
    metadata  Json?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model User {
    id        String   @id @default(uuid())
    username  String   @unique
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
