generator client {
    provider = "prisma-client"
    output   = "./generated"
}

datasource db {
    provider = "sqlite"
    url      = "file:./database/main.db"
}

model User {
    id        Int      @id @default(autoincrement())
    username  String   @unique
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Project {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    owner     String
    path      String   @unique
    metadata  Json?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Setting {
    id              Int   @id @default(autoincrement())
    user_setting    Json?
    project_setting Json?
    system_setting  Json?
}
