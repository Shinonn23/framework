{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "preserve",
        "incremental": true,
        "allowImportingTsExtensions": false,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@packages": [
                "../../packages"
            ],
            "@packages/*": [
                "../../packages/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
    ],
    "exclude": [
        "node_modules"
    ],
    "references": [
        {
            "path": "../../packages"
        }
    ]
}